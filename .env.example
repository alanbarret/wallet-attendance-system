# Phantom Wallet Attendance System - Environment Configuration
# Copy this file to .env and fill in your values

# ngrok Authentication Token
# Get your token from: https://dashboard.ngrok.com/get-started/your-authtoken
NGROK_AUTH_TOKEN=your_ngrok_token_here

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_PORT=5000

# QR Code Configuration
QR_REFRESH_INTERVAL=10
QR_GRACE_PERIOD=30
QR_REUSE_WINDOW=300

# Data Directories
KEYS_DIR=keys
DATA_DIR=data

# Optional: Custom Server Settings
# HOST=0.0.0.0
# PORT=5000

# Optional: Database (for future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/attendance
# DATABASE_URL=mongodb://localhost:27017/attendance
